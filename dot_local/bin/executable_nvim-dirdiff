#!/usr/bin/env bash

# Shell-escape each path:
DIR1=$(printf '%q' "$1"); shift
DIR2=$(printf '%q' "$1"); shift

# TODO: Remove bob command once NeoVim 0.12.x is released.
# TODO: Remove trouble_quickfix_takeover once trouble supports quickfix format config.
bob run nightly "$@" -c "packadd nvim.difftool" -c "let g:trouble_quickfix_takeover = v:false" -c "DiffTool $DIR1 $DIR2"